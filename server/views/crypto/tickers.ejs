<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel='stylesheet' href='../stylesheets/style.css'/>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="../bootstrap/css/bootstrap.min.css">
    <title>Solid Crypto Betting - Tickers</title>
</head>

<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#" id="rawbot_device_title">SolidBet</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" href="../">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="../crypto">Crypto Betting</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="../matches">Sports Betting</a>
            </li>
        </ul>

        <ul class="navbar-nav my-2 my-lg-0">
            <li class="nav-item">
                <a class="nav-link" href="#" id="balance_eth"></a>
            </li>
        </ul>
    </div>
</nav>
<div class="container-fluid">
    <div class="row">
        <table class="col-md-6 table table-bordered table-hover table-stats lower" style="margin-left: 15px">
            <thead>
            <tr>
                <th colspan="5" style="text-align: center">Crypto tickers</th>
            </tr>
            <tr>
                <th scope="col" style="width: 50px">#</th>
                <th scope="col" style="width: 100px">Name</th>
                <th scope="col" style="width: 150px">View Details</th>
                <th scope="col" style="width: 150px">View Contracts</th>
                <th scope="col" style="width: 150px">Create Bet</th>
            </tr>
            </thead>
            <tbody id="tickets_table">
            </tbody>
        </table>
        <table class="col-md-5 table table-bordered table-hover table-stats lower"
               style="margin-left: 15px">
            <thead>
            <tr>
                <th colspan="5" style="text-align: center">Crypto active bets</th>
            </tr>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Type</th>
                <th scope="col">Execution date</th>
                <th scope="col">Details</th>
            </tr>
            </thead>
            <tbody id="bets">
            </tbody>
        </table>
    </div>
</div>

<!-- Add crypto bet modal -->
<div class="modal fade" id="addTickerModal" tabindex="-1" role="dialog" aria-labelledby="modalAddCryptoBetLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Solid Crypto Betting - Contract Deployment</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="visibility_flag">Visibility</label><br/>
                    <select class="custom-select" id="visibility_flag">
                        <option value="1" selected>Public (visible on the crypto section page)</option>
                        <option value="2">Private (only anyone having the link can subscribe)</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="closure_delay">Closure Delay</label><br/>
                    <input type="datetime-local" id="closure_delay"
                           name="party-time" value="2018-10-20T19:30"/>
                </div>

                <div class="form-group">
                    <label for="execution_delay">Execution Delay</label><br/>
                    <input type="datetime-local" id="execution_delay"
                           name="party-time" value="2018-10-21T19:30"/>
                </div>

                <div class="form-group">
                    <label for="subscription_price">Subscription Price</label>
                    <input type="text" class="form-control" id="subscription_price"
                           placeholder="0.1 (amount in ETH)">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="add_ticker_button">Deploy</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="solidBetTransactionModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    Solid Bet - Contract Deployment</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p id="solidBetTransactionModalBody"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Optional JavaScript -->
<!-- jQuery first, then Popper.js, then Bootstrap JS -->
<script src="../js/utils/jquery-3.3.1.min.js"></script>
<script src="../js/utils/popper.min.js"></script>
<script src="../bootstrap/js/bootstrap.min.js"></script>
<script src="../js/utils/web3.min.js"></script>
<script src="../js/app.js"></script>
</body>

</html>