<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel='stylesheet' href='../../stylesheets/style.css' />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="../../bootstrap/css/bootstrap.min.css">
    <title>Solid Sports Betting - Bet details</title>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#" id="rawbot_device_title">Solid Bets</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="../../../../">Home</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                        aria-haspopup="true" aria-expanded="false">
                        Betting
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="../../../../crypto">Crypto</a>
                        <a class="dropdown-item" href="../../../../matches">Sports</a>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="../../../../history">History</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container">
        <div class="row">
            <div class="col-md-4 lower" id="bet_details">

            </div>
            <div class="col-md-2 lower" id="result_details">

            </div>
            <div class="col-md-4 lower" id="contract_details">
                <div class="form-group">
                    <label for="inputTeamScoreOne">Team one</label>
                    <input type="number" class="form-control" id="inputTeamScoreOne" aria-describedby="teamOneHelp"
                        placeholder="Enter team one score">
                </div>
                <div class="form-group">
                    <label for="inputTeamScoreTwo">Team two</label>
                    <input type="number" class="form-control" id="inputTeamScoreTwo" aria-describedby="teamTwoHelp"
                        placeholder="Enter team two score">
                </div>
                <button type="button" class="btn btn-primary" id="subscribe_sports_button">Submit</button>
            </div>
        </div>


        <table class="table table-bordered table-hover table-stats custom_background lower" style="width: 750px">
            <thead>
                <tr>
                    <th scope="col" colspan="3" style="text-align: center">Bets</th>
                </tr>
                <tr>
                    <th scope="col">User address</th>
                    <th scope="col">Team one score</th>
                    <th scope="col">Team two score</th>
                </tr>
            </thead>
            <tbody id="bet_subscribers">
            </tbody>
        </table>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="../../js/utils/jquery-3.3.1.min.js"></script>
    <script src="../../js/utils/popper.min.js"></script>
    <script src="../../bootstrap/js/bootstrap.min.js"></script>
    <script src="../../js/utils/web3.min.js"></script>
    <script src="../../js/app.js"></script>
</body>

</html>